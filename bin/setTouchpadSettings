#!/bin/bash

# Set the touchpad settings for daily use (use for awesome wm)

echo "Enabling tapping"
xinput set-prop "VEN_06CB:00 06CB:CE7E Touchpad" "libinput Tapping Enabled" 1
echo "Enabling natural scrolling"
xinput set-prop "VEN_06CB:00 06CB:CE7E Touchpad" "libinput Natural Scrolling Enabled" 1
echo "Setting accelleration speed"
xinput set-prop "VEN_06CB:00 06CB:CE7E Touchpad" "libinput Accel Speed" 0.35

