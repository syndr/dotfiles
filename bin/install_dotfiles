#!/bin/env bash

# Do setup steps for the dotfiles configuration
#

config="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"

cd ~

echo ðŸª„ Updating repo...
$config pull

echo ðŸª„ Updating submodules...
$config submodule update --init --recursive

echo ðŸª„ Configuring firefox...
echo Home is: $HOME
ff_default_dir=$(find .mozilla/firefox -type d -name *.default)
ln -sf $HOME/.mozilla/firefox/user_config $ff_default_dir/chrome
ln -sf $HOME/.mozilla/firefox/git/firefox-csshacks $HOME/.mozilla/firefox/user_config/chrome

echo ðŸª„ Done!
